-- Load Rayfield Library
local Rayfield = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Rayfield/main/source"))()

-- Key System Configuration
local validKey = "TerryHubMobile123" -- Set your desired key here
local isAuthenticated = false

-- Create the Main Window
local Window = Rayfield:CreateWindow({
    Name = "Terry Hub - Mobile Edition",
    LoadingTitle = "Terry Hub",
    LoadingSubtitle = "Optimized for Mobile Users!",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "TerryHubData",
        FileName = "MobileConfig"
    },
    Discord = {
        Enabled = true,
        Invite = "https://discord.gg/FehxdA3w", -- Replace with your Discord invite link
        RememberJoins = true
    },
    KeySystem = true, -- Enable Key System
    KeySettings = {
        Title = "Terry Hub Key System",
        Subtitle = "TerryHubBeta",
        Note = "Find the key in our Discord!",
        SaveKey = true,
        Key = validKey
    }
})

-- Create Scripts Tab
local ScriptsTab = Window:CreateTab("Scripts", 4483362458) -- Replace with your preferred icon ID

-- Add Script Buttons
ScriptsTab:CreateButton({
    Name = "Infinite Yield Admin",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
    end
})

ScriptsTab:CreateButton({
    Name = "Vehicle Legends",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Marco8642/science/main/Vehicle%20legends"))()
    end
})

ScriptsTab:CreateButton({
    Name = "The Strongest Battlegrounds",
    Callback = function()
        loadstring(game:HttpGet("https://rawscripts.net/raw/The-Strongest-Battlegrounds-Phantasm-TSB-Script-16254"))()
    end
})

ScriptsTab:CreateButton({
    Name = "Owl Hub",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/CriShoux/OwlHub/master/OwlHub.txt"))()
    end
})

ScriptsTab:CreateButton({
    Name = "Aurora Hub",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/cocotv666/Aurora/refs/heads/main/Aurora_Loader'))()
    end
})

-- Add Utility Tab for Extras
local UtilityTab = Window:CreateTab("Utility", 4483362458) -- Replace with your preferred icon ID

UtilityTab:CreateButton({
    Name = "Close Terry Hub",
    Callback = function()
        Rayfield:Destroy()
    end
})

-- Add Credits Tab
local CreditsTab = Window:CreateTab("Credits", 4483362458) -- Replace with your preferred icon ID

CreditsTab:CreateSection("Created By: Dollythete")
CreditsTab:CreateParagraph({
    Title = "About Terry Hub",
    Content = "Terry Hub is optimized for mobile users and offers robust scripting options for Roblox. Join our Discord for updates and support!"
})

-- Notify When Ready
Rayfield:Notify({
    Title = "Terry Hub Ready!",
    Content = "Mobile compatibility activated. Enjoy your scripts!",
    Duration = 5
})
